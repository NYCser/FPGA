module Decoder3to8 (
output reg [7:0] out,
input wire [2:0] in,
input wire EN
);
always @(*)
if (EN == 1'b0)
	out = 8'b11111111;
else begin
	out = 8'b11111111;
	case (in)
	3'b000: out[0] = 1'b0;
	3'b001: out[1] = 1'b0;
 	3'b010: out[2] = 1'b0;
	3'b011: out[3] = 1'b0;
	3'b100: out[4] = 1'b0;
	3'b101: out[5] = 1'b0;
	3'b110: out[6] = 1'b0;
	default: out[7] = 1'b0;
	endcase
end
endmodule
